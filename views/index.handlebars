
<div className = 'header'>
  <h1>Tech-Tracker</h1>
  <p>A way to keep track of topics I have learned or wish to learn as a fullstack developer.</p>
</div>

<!-- Pass in data from server.js -->
<ul>
  {{#each topics}}
  	<li>
  	<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Topic:</span> {{this.topic_name}}</p>
      <p><span class="label">Description:</span> {{this.topic_summary}}</p>
      <p><span class="label">Learned:</span> {{this.learned}}</p>

      <a href="/{{this.id}}">Update Status</a>
  	</li>
  {{/each}}
</ul>

<div className = 'form'>

  <h2>Add a Topic</h2>

  <form class="topic-form">

      <div class="form-group">
      <label for="auth">Topic:</label>
      <input type="text" id="auth" name="author">
    </div>

    <div class="form-group">
      <label for="quo">Description:</label>
      <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
    </div>

    <button type="submit">Add Topic </button>
  </form>

</div>
